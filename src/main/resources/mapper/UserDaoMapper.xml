<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.ljz.tea.dao.UserDao">
	<resultMap type="com.cn.ljz.tea.entity.SysUser" id="userMap">
		<id property="id" column="ID"/>
        <result property="username" column="username"/>
        <result property="pwd" column="pwd"/>
        <collection property="roles" ofType="com.cn.ljz.tea.entity.SysUser">
        </collection>
		
	</resultMap>	

	<select id="findByUserName" parameterType="String" resultMap="userMap">
        select u.*
        ,r.name
        from sys_user u
        LEFT JOIN sys_role_user sru on u.id= sru.Sys_User_id
        LEFT JOIN sys_role r on sru.role_id=r.id
        where username= #{username}
    </select>



</mapper>